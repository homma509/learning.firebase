{
  "name": "functions",
  "scripts": {
    "lint": "eslint 'src/**/*.{js.ts}'",
    "build": "npm run lint && tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "jest",
    "dbreset": "firebase firestore:delete --all-collections",
    "dbreset:publishers": "firebase firestore:delete -y --shallow publishers",
    "dbseed": "npm run dbseed:publishers",
    "dbseed:publishers": "node lib/commands/dbseed.js publishers seeds/publishers.tsv",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "commander": "^6.1.0",
    "csv-parse": "^4.12.0",
    "csv-parser": "^2.3.3",
    "firebase": "^7.24.0",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.4",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@types/prettier": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "firebase-functions-test": "^0.2.0",
    "jest": "^26.5.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^3.8.0"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts?|js?)$",
    "moduleFileExtensions": [
      "ts",
      "json",
      "js"
    ]
  }
}
